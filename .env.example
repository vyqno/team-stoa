# Supabase
DATABASE_URL=postgresql://...              # Postgres connection (transaction pooler, port 6543)
DATABASE_URL_DIRECT=postgresql://...       # Direct connection (port 5432, for migrations only)
SUPABASE_URL=https://[ref].supabase.co     # Project URL (for Realtime)
SUPABASE_ANON_KEY=eyJ...                   # Anon key (for Realtime client)
SUPABASE_SERVICE_ROLE_KEY=eyJ...           # Service role key (for Google OAuth server-side)

# HuggingFace Embeddings
HF_TOKEN=hf_...                            # API token
HF_EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5
HF_PROVIDER=hf-inference
EMBEDDING_DIMENSIONS=768                   # MUST match schema.ts vector()

# Coinbase CDP (server-managed wallets + x402 facilitator)
CDP_API_KEY_ID=...                         # CDP API key ID
CDP_API_KEY_SECRET=...                     # CDP API key secret
CDP_WALLET_SECRET=...                      # CDP wallet encryption secret
X402_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402

# thirdweb (web wallet connection)
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=...

# Razorpay (INR fiat onramp)
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=...

# Upstash Redis (rate limiting)
UPSTASH_REDIS_REST_URL=...
UPSTASH_REDIS_REST_TOKEN=...

# App
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001
JWT_SECRET=...                             # For user auth tokens
